{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nodepdf",
  "version": "0.1.0",
  "identifier": "com.nodepdf.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  
  "app": {
    "windows": [
      {
        "title": "nodepdf",
        "resizable": true,
        "width": 1920,
        "height": 1080,
        "minWidth": 1000, 
        "minHeight": 800, 
        "maxWidth": 1900,
        "maxHeight": 1080,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
